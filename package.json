{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "Multi-project task management tool with Gantt charts and workload management",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "infrastructure",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:infrastructure",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:infrastructure": "cd infrastructure && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend && npm run build:infrastructure",
    "build:shared": "cd shared && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:infrastructure": "cd infrastructure && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "deploy:dev": "cd infrastructure && ENVIRONMENT=dev ./scripts/deploy.sh",
    "deploy:prod": "cd infrastructure && ENVIRONMENT=prod ./scripts/deploy.sh",
    "deploy:test": "cd infrastructure && ./scripts/test-deployment.sh",
    "destroy:dev": "cd infrastructure && ENVIRONMENT=dev ./scripts/destroy.sh",
    "destroy:prod": "cd infrastructure && ENVIRONMENT=prod ./scripts/destroy.sh",
    "docker:build": "cd backend && docker build -t task-manager-backend .",
    "docker:run": "docker run -p 3001:3001 task-manager-backend",
    "cdk:synth": "cd infrastructure && cdk synth",
    "cdk:diff": "cd infrastructure && cdk diff",
    "cdk:deploy": "cd infrastructure && cdk deploy",
    "cdk:destroy": "cd infrastructure && cdk destroy"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/task-manager.git"
  },
  "keywords": [
    "task-management",
    "gantt-chart",
    "workload-management",
    "react",
    "nodejs",
    "aws",
    "cdk",
    "ecr",
    "oidc"
  ],
  "author": "Your Name",
  "license": "MIT"
}